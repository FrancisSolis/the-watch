<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FBE9E7"
    android:padding="0dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:weightSum="2"
                    android:padding="10dp">

                    <FrameLayout
                        android:background="@drawable/profile_avatar_watcher_bg"
                        android:layout_gravity="top"
                        android:saveEnabled="false"
                        android:padding="20dp"
                        android:layout_height="match_parent"
                        android:elevation="7dp"
                        android:id="@+id/profile_image_bg"
                        android:layout_width="match_parent"
                        android:layout_weight="1.28">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/iv_avatar"
                            android:scaleType="centerCrop"
                            app:srcCompat="@android:drawable/ic_menu_gallery" />
                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:weightSum="2"
                        android:layout_weight=".7">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_number_of_rating"
                                    android:textSize="30sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#1D1D1D" />

                                <TextView
                                    android:text="Ratings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView7"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="#1D1D1D" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_number_of_post"
                                    android:textSize="30sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#1D1D1D" />

                                <TextView
                                    android:text="Posts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView8"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="#1D1D1D" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_number_of_followers"
                                    android:textSize="30sp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#1D1D1D" />

                                <TextView
                                    android:text="Followers"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/followers_label"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="#1D1D1D" />

                            </LinearLayout>
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/follow_btn"
                            android:layout_width="190dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/follow"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            android:visibility="visible"/>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Name"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textSize="24sp"
                    android:id="@+id/tv_profile_name"

                    android:textColor="#1D1D1D" />

                <TextView
                    android:text="Rank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_profile_rank"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#1D1D1D" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp">

                    <ProgressBar
                        android:id="@+id/pb_chronicler"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="4050"
                        android:progress="1350"
                        android:progressTint="@color/color_chronicler"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/pb_spy"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="1350"
                        android:progress="450"
                        android:progressTint="@color/color_spy"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/pb_scout"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="450"
                        android:progress="150"
                        android:progressTint="@color/color_scout"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/pb_spotter"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="150"
                        android:progress="50"
                        android:progressTint="@color/color_spotter"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/pb_maven"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="12150"
                        android:progress="4050"
                        android:progressTint="@color/color_maven"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/pb_watcher"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="50"
                        android:progress="0"
                        android:progressTint="@color/color_watcher"
                        android:visibility="visible"/>

                    <ProgressBar
                        android:id="@+id/pb_sentinel"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="12150"
                        android:progress="12150"
                        android:progressTint="@color/color_sentinel"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/pb_naysayer"
                        android:layout_width="match_parent"
                        android:layout_height="20px"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="1"
                        android:progress="1"
                        android:progressTint="@color/color_naysayer"

                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_profile"
                android:layout_width="match_parent"
                android:layout_height="365dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
