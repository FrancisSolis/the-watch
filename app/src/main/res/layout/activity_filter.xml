<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.roxette.filters.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:textColor="#1d1d1d"
            android:text="by Rank:"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/f_naysayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="50dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#1d1d1d"
                    android:text="Naysayer"
                    android:tag="0" />

                <TextView
                    android:id="@+id/f_spy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="60dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#1d1d1d"
                    android:text="Spy"
                    android:tag="4" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/f_watcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="50dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#1d1d1d"
                    android:text="Watcher"
                    android:tag="1" />

                <TextView
                    android:id="@+id/f_chronicler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="60dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#1d1d1d"
                    android:text="Chronicler"
                    android:tag="5" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/f_spotter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="50dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#1d1d1d"
                    android:text="Spotter"
                    android:tag="2" />

                <TextView
                    android:id="@+id/f_maven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="60dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#1d1d1d"
                    android:text="Maven"
                    android:tag="6" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/f_scout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="50dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#1d1d1d"
                    android:text="Scout"
                    android:tag="3" />

                <TextView
                    android:id="@+id/f_sentinel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="60dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#1d1d1d"
                    android:text="Sentinel"
                    android:tag="7" />

            </TableRow>

        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/divider"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:textSize="20sp"
            android:textColor="#1d1d1d"
            android:text="by Publicity:"
            android:textStyle="normal|bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:id="@+id/f_public"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="53dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Public"/>

                <TextView
                    android:id="@+id/f_followed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="84dp"
                    android:paddingTop="20dp"
                    android:textSize="20sp"
                    android:textColor="#1d1d1d"
                    android:text="Followed"/>

            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/divider"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:textSize="20sp"
            android:textColor="#1d1d1d"
            android:text="by Distance (km):"
            android:textStyle="normal|bold" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar"
            android:id="@+id/f_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:max="100"
            android:progress="5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:id="@+id/tv_distance"
            android:textColor="#1d1d1d" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/divider"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:textSize="20sp"
            android:textColor="#1d1d1d"
            android:text="by Timestamp:"
            android:textStyle="normal|bold" />

        <SeekBar
            android:id="@+id/f_timestamp"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:max="3"
            android:progress="0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 day"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:id="@+id/tv_timestamp"
            android:textColor="#1d1d1d" />

        <Button
            android:text="Apply Filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#FF5722"
            android:textColor="#FBE9E7"
            android:id="@+id/btn_apply" />

    </LinearLayout>
</ScrollView>