<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wp_activity_map_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.engineering.software.thewatch.userinterface.map.MapPostActivity"
    android:padding="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/wp_lyt_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/wp_iv_avatar_frame"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/profile_avatar_chronicler_bg">

                    <ImageView
                        android:id="@+id/wp_iv_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/avatar_placeholder" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wp_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="Username"
                        android:textColor="#1d1d1d"
                        android:textSize="16sp" />

                    <!-- Marker Icon and Primary Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/wp_iv_marker"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/location_marker" />

                        <TextView
                            android:id="@+id/wp_tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            android:text="Location, Location"
                            android:textColor="#1d1d1d"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/wp_tv_secondary_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:text="Location, Location"
                        android:textColor="#696969"
                        android:textSize="10sp" />

                    <!-- Clock Icon and Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/wp_iv_clock"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/clock" />

                        <TextView
                            android:id="@+id/wp_tv_date_and_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="4dp"
                            android:text="February 14, 1910"
                            android:textColor="#1d1d1d"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/wp_tv_divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/wp_lyt_upper"
                android:layout_marginTop="10dp"
                android:background="@drawable/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wp_lyt_upper"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/wp_iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_placeholder"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/wp_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Title of the Post"
                    android:textColor="#1d1d1d"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/wp_tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Description blah blah blah blah blah blah blah blah blah blah blah blah blah blah"
                    android:textColor="#1d1d1d"
                    android:textSize="15sp" />

                <!--Mood Icon and Moods-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/wp_iv_mood"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/wp_tv_description"
                        android:layout_gravity="center"
                        android:src="@drawable/moods" />

                    <TextView
                        android:id="@+id/wp_tv_mood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wp_tv_description"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@id/wp_iv_mood"
                        android:layout_gravity="center"
                        android:text="Mood"
                        android:textColor="#1d1d1d"
                        android:textSize="15sp" />
                </LinearLayout>

                <!--Tag Icon and Tags-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/wp_iv_tags"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/wp_iv_mood"
                        android:layout_gravity="center"
                        android:src="@drawable/tags" />

                    <me.originqiu.library.EditTag
                        android:id="@+id/wp_tv_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wp_tv_mood"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/wp_iv_tags"
                        android:textColor="#1d1d1d"
                        android:textSize="15sp"
                        app:delete_mode_bg="@drawable/rounded_rectangle_delete"
                        app:input_layout="@layout/view_sample_input_tag"
                        app:tag_layout="@layout/view_sample_tag" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:id="@+id/wp_iv_downvote"
                            android:layout_gravity="center"
                            android:layout_height="45dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/downvote"
                            android:layout_weight="1"
                            android:layout_width="40dp"
                            android:layout_marginRight="10dp" />

                        <ImageView
                            android:id="@+id/wp_iv_upvote"
                            android:layout_gravity="center"
                            android:layout_height="45dp"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/wp_tv_literal_rating"
                            android:src="@drawable/upvote"
                            android:layout_weight="1"
                            android:layout_width="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:id="@+id/wp_rating"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/wp_tv_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="987"
                            android:textColor="#1d1d1d"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/wp_tv_literal_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/wp_tv_rating"

                            android:text=" ratings"
                            android:textColor="#1d1d1d"
                            android:textSize="15sp" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
